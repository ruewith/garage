{% extends 'base.html.twig' %}

{% block title %}{{ client.firstname }}{{ client.lastname }}{% endblock %}

{% block main %}
    <div class="container-fluid mt-5">
        <div class="card mb-4 wow fadeIn">
            <div class="card-body d-sm-flex justify-content-between">
                <h2 class="mb-2 mb-sm-0 pt-1">
                    {{ title }}{{ client.firstname }}{{ client.lastname }}
                </h2>
            </div>
        </div>
        <div class="row wow fadeIn">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Информация
                    </div>
                    <div class="card-body">
                        <div><span>Имя:</span>{{ client.firstname }}</div>
                        <div><span>Фамилия:</span>{{ client.lastname }}</div>
                        <div><span>Телефон:</span>{{ client.phone}}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row wow fadeIn">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead class="blue-grey lighten-4">
                            <tr>
                                <th>Марка</th>
                                <th>Модель</th>
                                <th>Номер</th>
                                <th>VIN</th>
                                <th>Действие</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for car in cars %}
                                <tr>
                                    <td>{{ car.mark}}</td>
                                    <td>{{ car.model }}</td>
                                    <td><a href="{{ path('car_single', {'car': car.id}) }}">{{ car.number }}</a></td>
                                    <td>{{ car.vin }}</td>
                                    <td><a href="{{ path('car_remove', {'car': car.id}) }}">Удалить</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

