{% extends 'base.html.twig' %}

{% block title %}{{ car.number }}{% endblock %}

{% block main %}
    <div class="container-fluid mt-5">
        <div class="card mb-4 wow fadeIn">
            <div class="card-body d-sm-flex justify-content-between">
                <h2 class="mb-2 mb-sm-0 pt-1">
                    {{ title }}{{ car.number }}
                </h2>
            </div>
        </div>
        <div class="row wow fadeIn">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Информация
                    </div>
                    <div class="card-body">
                        <div><span>Марка:</span> {{ car.mark }}</div>
                        <div><span>Модель:</span> {{ car.model }}</div>
                        <div><span>Номер:</span> {{ car.number }}</div>
                        <div><span>VIN:</span> {{ car.vin }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row wow fadeIn">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead class="blue-grey lighten-4">
                            <tr>
                                <th>Дата</th>
                                <th>Пробег</th>
                                <th>Масло</th>
                                <th>Описание</th>
                                <th>Действие</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for service in services %}
                                <tr>
                                    <th>
                                        <a href="{{ path('service_single', {'service': service.id}) }}">{{ service.createdAt| date("d.m.Y")}}</a>
                                    </th>
                                    <td>{{ service.mileage}}</td>
                                    <td>
                                        {% if service.oil == 1 %}
                                            Да
                                        {% else %}
                                            Нет
                                        {% endif %}
                                    </td>
                                    <td>{{ service.description }}</td>
                                    <td><a href="{{ path('service_remove', {'service': service.id}) }}">Удалить</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

